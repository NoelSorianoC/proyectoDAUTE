<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7FD8D0"
    tools:context=".aggcategoria">


  <ImageView
      android:id="@+id/volver"
      android:layout_marginTop="12dp"
      android:layout_marginLeft="12dp"
      android:padding="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/volver"/>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Categoria"
      android:textStyle="bold"
      android:gravity="center"
      android:layout_marginTop="12dp"/>


  <EditText
      android:id="@+id/nom_cat"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:drawableLeft="@drawable/ic_view"
      android:drawablePadding="25dp"
      android:inputType="textPersonName"
      android:layout_gravity="center"
      android:hint="Nombre de la categoria"
      android:gravity="center"
      android:layout_marginTop="12dp"/>

  <EditText
      android:id="@+id/cod_cat"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="12dp"
      android:drawableLeft="@drawable/ic_code"
      android:ems="10"
      android:gravity="center"
      android:hint="Codigo de la categoria"
      android:inputType="textPersonName" />

  <EditText
      android:id="@+id/des_cat"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:drawableLeft="@drawable/ic_description"
      android:inputType="textPersonName"
      android:layout_gravity="center"
      android:hint="Descripcion de la categoria"
      android:gravity="center"
      android:layout_marginTop="12dp"/>

  <Button
      android:id="@+id/guardarcat"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Guardar Categoria"
      android:layout_marginTop="12dp"/>

</LinearLayout>